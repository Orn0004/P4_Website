@model IEnumerable<BidEntity>
@{
    ViewData["Title"] = "Incoming Bids";
}

<h1>Incoming Bids on selected task </h1>
<table>
    <thead>
        <tr>
            <th>Contributor Name:</th>
            <th>Bid</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var row in Model)
        {
            <tr>
                <td>@row.ContributorUsername</td>
                <td>@row.Bid DKK</td>
                <td>@row.DateCreated</td>
                <td><a asp-controller="IncomingBids" asp-action="Confirm" asp-route-bidId="@row.Id" asp-route-taskId="@row.TaskId">Confirm bid</a></td>
            </tr>

        }
    </tbody>
</table>
<style>
    table, th, td {
        border: solid 1px #bbbbbb;
        border-collapse: collapse;
        padding: 2px;
    }
</style>