<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $('#CategorySelect').change(function () {
            $('.categories').hide();
            $('#' + $(this).val()).show();
        });
    });
</script>
@{
    ViewData["Title"] = "AddTask";
}
<h1>Create a task</h1>



