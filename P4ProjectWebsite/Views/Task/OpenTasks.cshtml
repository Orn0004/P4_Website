@model IEnumerable<TaskEntity>
@{
    ViewData["Title"] = "OpenTasks";
}
<meta http-equiv="refresh" content="25" />
<h1>Available Tasks</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration</th>
            <th>Location</th>
            <th>Category</th>
            <th>Current Bid</th>
            <th>Task Created</th>
            <th>Created by</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
<tr>
    <td>@row.Title</td>
    <td>@row.Duration Hours</td>
    <td>@row.Location</td>
    <td>@row.Category</td>
    @if (@row.Bid == 0)
    {
        <td>Not yet bid</td>
    }
    else {
    <td>@row.Bid DKK</td>
    }
    <td>@row.DateCreated</td>

    @*<td>
            <a asp-controller="Category" asp-action="Delete" asp-route-name="@row.Name" onclick="return confirm('Are you sure you want to delete the Category: @row.Name (@row.Type)?')">Delete</a>
        </td>*@
</tr>

        }
        </tbody>
    </table>
    <style>
        table, th, td {
            border: solid 1px #bbbbbb;
            border-collapse: collapse;
            padding: 2px;
        }
    </style>

